<%- include('./partials/header.ejs') %>

    <!-- // main content  -->


    <div class="container">
        <div class="row">
            <div class="col-sm-6 mt-5">

                <h2 class="alert alert-success text-center">Add new student </h2>
                <form method="post">
                    <div class="mb-3">
                        <label for="name" class="from-label">Name</label><br>
                        <input type="text" class="from-control" id="name" name="name" style="width: 500px;" />
                    </div>
                    <div class="mb-3">
                        <label for="age" class="from-label">Age</label><br>
                        <input type="text" class="from-control" id="age" name="age" style="width: 500px;" />
                    </div>
                    <div class="mb-3">
                        <label for="fees" class="from-label">fees</label><br>
                        <input type="text" class="from-control" id="fees" name="fees" style="width: 500px;" />
                    </div>
                    <button type="submit" class="btn btn-primary">submit</button>
                </form>
            </div>
            <div class="col-sm-6 mt-5">
                <h2 class="alert alert-danger text-center">list of student </h2>
                <%# Show All Data %>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">Name</th>
                                <th scope="col">Age</th>
                                <th scope="col">Fees</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% Data.forEach((item, index)=> { %>
                                <tr>
                                    <td>
                                        <%= index + 1 %>
                                    </td>
                                    <td>
                                        <%= item.name %>
                                    </td>
                                    <td>
                                        <%= item.age %>
                                    </td>
                                    <td>
                                        <%= item.fees %>
                                    </td>
                                    <td>
                                        <form action="/index/edit/<%=item._id %>" method="get" class="d-inline">
                                            <button type="submit" class="btn ">
                                                <i class="fa-solid fa-square-pen"></i>
                                            </button>
                                        </form>
                                        <form action="/index/delete/<%=item._id %>" method="post" class="d-inline">
                                            <button type="submit" class="btn ">
                                                <i class="fa-solid fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                <% }) %>

                        </tbody>
                    </table>
            </div>
        </div>
    </div>





    <%- include('./partials/footer') %>